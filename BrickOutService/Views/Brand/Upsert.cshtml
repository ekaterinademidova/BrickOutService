@model Brand

<form method="post">
    <fieldset>
        <div class="row">
            <label class="form-label mt-4">@(Model.Id != 0 ? "Update" : "Create") the brand</label>
            <input asp-for="Id" hidden />
            <div class="form-floating mb-3">                
                <input asp-for="Name" class="form-control" type="text" placeholder="Samsung">
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" placeholder="The phone is device, which..." rows="3"></textarea>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        @if (Model.Id != 0)
        {
            <button type="submit" class="btn btn-primary">Update</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary">Create</button>
        }
        <a asp-controller="Brand" asp-action="Index" class="btn btn-secondary">Back</a>
    </fieldset>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}